# syntax=v1
lib = include('https://github.com/gfhe/envdlib')

def vllm(dev):
    lib.install_torch(version="latest", py_version="3.11", dev = dev, cuda_dev=True, cuda_version="121")

    install.python_packages(name=[
        "sentencepiece", 
        "'transformers >= 4.39.1'", 
        "autoawq",
        "fschat", 
        "accelerate", 
        "ray", 
        "pandas", 
        "numpy", 
        "huggingface_hub", 
        "ninja", 
        "psutil", 
        "pyarrow", 
        "fastapi", 
        "uvicorn[standard]", 
        "'prometheus_client>=0.18.0'",
        "'pydantic>=2.0'", 
        "pynvml==11.5.0",
        "'triton>=2.1.0'",
        "'outlines>=0.0.34'",
        "cupy-cuda12x>=12.1.0",
        "tiktoken>=0.6.0", # Required for DBRX tokenizer
        "vllm==v0.4.0.post1"
        ])

def build():
    # this comes with dev tools
    lib.add_default_key()
    vllm(True)

def serve():
    vllm(False)
