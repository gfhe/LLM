# syntax=v1
lib = include('https://github.com/gfhe/envdlib')

def vllm(dev):
    lib.torch(dev=dev)
    install.python_packages(name=[
        "sentencepiece", 
        "transformers", 
        "autoawq",
        "fschat", 
        "accelerate", 
        "ray", 
        "pandas", 
        "numpy", 
        "huggingface_hub", 
        "ninja", 
        "psutil", 
        "pyarrow", 
        "fastapi", 
        "uvicorn[standard]", 
        "'pydantic<2'", 
        # pip vllm only support nvidia toolkit 11.8, 不支持12.X驱动，
        # "vllm"
        ])
    # must run on gpu
    # install.python_packages(name=["git+https://github.com/vllm-project/vllm.git"])

    # can run on cpu
    # run(commands=["git clone https://github.com/vllm-project/vllm.git"])

def build():
    # this comes with dev tools
    lib.add_default_key()
    vllm(True)

def serve():
    vllm(False)
